<% if %i(edit new).include? @form_object.ingredient_action %>
  <%= render "ingredients/#{@form_object.ingredient_action}",
             form_object: @form_object,
             ingredient: @form_object.ingredients[@form_object.ingredient_index] || Ingredient.new %>
<% else %>
  <%= render 'form', form_object: @form_object %>
  <%= link_to 'Show', @form_object %> |
  <%= link_to 'Back', meals_path %>
<% end %>
