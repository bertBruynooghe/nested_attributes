<%= form_for(meal) do |meal_form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(meal.errors.count, "error") %>
            prohibited this meal from being saved:</h2>

        <ul>
            <% meal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
      <%= meal_form.label :consumption_time %>
      <%= meal_form.datetime_select :consumption_time %>
  </div>

  <table>
    <%= meal_form.fields_for(:ingredients) do |ingredient_form| %>
      <tr>
        <%= ingredient_form.hidden_field :name %>
        <td><%= meal.ingredients[ingredient_form.index].name %></td>
        <td><%= meal_form.submit name: "meal[ingredients_attributes][#{ingredient_form.index}][edit]", value: 'edit' %></td>
      </tr>
    <% end %>
  </table>

  <%= meal_form.submit name: "meal[ingredients_attributes][#{meal.ingredients.length}][edit]", value: 'new ingredient' %>

  <div class="actions">
      <%= meal_form.submit %>
  </div>
<% end %>
